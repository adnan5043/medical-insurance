<h1>Denial Codes</h1>
<%= link_to 'New Denial Code', new_denialcodelist_path %>
<br>
<%= link_to 'Back', root_path %>
<table>
  <thead>
    <tr>
      <th>#</th>
      <th>Denial Code</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @denialcodelists.each_with_index do |denial, index| %>
      <tr>
        <td><%= index + 1 %></td> <!-- Adding the count -->
        <td><%= denial.denial_code %></td>
        <td><%= denial.description %></td>
        <td>
          <%= link_to 'Edit', edit_denialcodelist_path(denial) %> |
          <%= button_to 'Destroy', denialcodelist_path(denial), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

