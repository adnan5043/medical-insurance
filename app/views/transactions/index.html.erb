<h2 class="mt-4">Get Transaction Files</h2>

<%= form_with url: fetch_transactions_transactions_path, method: :post, class: 'mt-3', id: 'transaction_form' do |form| %>
  <div class="form-group">
    <%= form.label :transaction_id, "Transaction ID" %>
    <%= form.select :transaction_id, options_for_select([['Claim Submission', 2], ['Remittance Advice', 8], ['Prior Request', 16], ['Prior Authorization', 32]]), { selected: 8 }, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :direction, "Direction" %>
    <%= form.select :direction, options_for_select([['Sent Only', 1], ['Received Only', 2]]), { selected: 1 }, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :transaction_status, "Transaction Status" %>
    <%= form.select :transaction_status, options_for_select([['New Only', 1], ['Downloaded Only', 2]]), { selected: 2 }, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :min_record_count, "Min Record Count" %>
    <%= form.number_field :min_record_count, value: -1, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :max_record_count, "Max Record Count" %>
    <%= form.number_field :max_record_count, value: -1, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :transaction_from_date, "From Date" %>
    <%= form.datetime_local_field :transaction_from_date, value: '', class: 'form-control', id: 'transaction_from_date' %>
  </div>

  <div class="form-group">
    <%= form.label :transaction_to_date, "To Date" %>
    <%= form.datetime_local_field :transaction_to_date, value: '', class: 'form-control', id: 'transaction_to_date' %>
  </div>

  <%= form.submit 'Send Request', class: 'btn btn-primary mt-3', id: 'submit_button' %>
<% end %>

<%= button_to 'Download Excel', transactions_path(format: :xlsx), method: :get, class: 'btn btn-primary' %>
<%= link_to 'View Doctor List', doctorlists_path, class: 'btn btn-primary mt-3' %>

<!-- Popup for date validation -->
<div id="date-warning-popup" style="display:none; background-color: yellow; padding: 20px; margin-top: 10px;">
  <strong>Warning!</strong> The date range exceeds 100 days. Please adjust the dates.
</div>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    const form = document.getElementById('transaction_form');
    const fromDateInput = document.getElementById('transaction_from_date');
    const toDateInput = document.getElementById('transaction_to_date');
    const submitButton = document.getElementById('submit_button');
    const warningPopup = document.getElementById('date-warning-popup');

    form.addEventListener('submit', function(event) {
      const fromDate = new Date(fromDateInput.value);
      const toDate = new Date(toDateInput.value);
      
      const diffTime = Math.abs(toDate - fromDate);
      const diffDays = diffTime / (1000 * 3600 * 24);

      if (diffDays > 100) {
        event.preventDefault(); // Prevent form submission
        warningPopup.style.display = 'block'; // Show warning popup
      } else {
        warningPopup.style.display = 'none'; // Hide warning popup
      }
    });
  });
</script>
