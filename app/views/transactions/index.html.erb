<h2 class="mt-4">Get Transaction Files</h2>

<%= form_with url: fetch_transactions_transactions_path, method: :post, class: 'mt-3', id: 'transaction_form' do |form| %>
  <div class="form-group">
    <%= form.label :username, "Username" %>
    <%= form.collection_select :username, Branch.all, :username, :username, { prompt: "Select a Username" }, class: 'form-control', id: 'username_select' %>
  </div>
  
  <div class="form-group">
    <%= form.label :transaction_from_date, "From Date" %>
    <%= form.datetime_local_field :transaction_from_date, value: '', class: 'form-control', id: 'transaction_from_date' %>
  </div>

  <div class="form-group">
    <%= form.label :transaction_to_date, "To Date" %>
    <%= form.datetime_local_field :transaction_to_date, value: '', class: 'form-control', id: 'transaction_to_date' %>
  </div>

  <%= form.submit 'Send Request', class: 'btn btn-primary mt-3', id: 'submit_button' %>
