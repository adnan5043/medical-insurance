<!-- Popup for date validation -->
<div id="date-warning-popup" style="display:none; background-color: yellow; padding: 20px; margin-top: 10px;">
  <strong>Warning!</strong> The date range exceeds 100 days. Please adjust the dates.
</div>

<style>
  #loading-indicator {
    text-align: center;
    margin-top: 20px;
  }
  #loading-indicator img {
    width: 50px;
    height: 50px;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    const form = document.getElementById('transaction_form');
    const fromDateInput = document.getElementById('transaction_from_date');
    const toDateInput = document.getElementById('transaction_to_date');
    const warningPopup = document.getElementById('date-warning-popup');

    form.addEventListener('submit', function(event) {
      const fromDate = new Date(fromDateInput.value);
      const toDate = new Date(toDateInput.value);
      
      const diffTime = Math.abs(toDate - fromDate);
      const diffDays = diffTime / (1000 * 3600 * 24);

      if (diffDays > 100) {
        event.preventDefault(); // Prevent form submission
        warningPopup.style.display = 'block'; // Show warning popup
      } else {
        warningPopup.style.display = 'none'; // Hide warning popup
      }
    });
  });
</script>

