<h1>Download report</h1>
<%= link_to 'Back to home', root_path, class: 'btn btn-secondary' %>

<%= form_with url: download_report_transactions_path(format: :xlsx), method: :get, local: true do |f| %>
  <div>
    <%= f.label :username, "Username" %>
    <%= f.select :username, Branch.pluck(:username, :username), { prompt: "Select Username" }, class: "form-control" %>
  </div>
  <div>
    <%= f.submit "Download report", class: "btn btn-primary" %>
  </div>
<% end %>
