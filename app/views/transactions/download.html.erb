 <div class="container mt-5">
    <h1 class="text-center">Download Transaction File</h1>

    <% if flash[:error] %>
      <div class="alert alert-danger" role="alert">
        <%= flash[:error] %>
      </div>
    <% end %>

    <% if flash[:notice] %>
      <div class="alert alert-success" role="alert">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <div class="card">
      <div class="card-body">
        <%= form_with url: download_transaction_path, method: :post, local: true do |f| %>
          <div class="form-group">
            <%= f.label :login, "Username" %>
            <%= f.text_field :login, class: "form-control", placeholder: "Enter Username" %>
          </div>

          <div class="form-group">
            <%= f.label :password, "Password" %>
            <%= f.password_field :password, class: "form-control", placeholder: "Enter Password" %>
          </div>

          <div class="form-group">
            <%= f.label :file_id, "File ID" %>
            <%= f.text_field :file_id, class: "form-control", placeholder: "Enter File ID" %>
          </div>

          <%= f.submit "Submit", class: "btn btn-primary btn-block mt-3" %>
        <% end %>
      </div>
    </div>
  </div>