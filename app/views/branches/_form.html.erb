<div class="d-flex justify-content-center align-items-start min-vh-100">
  <div class="card" style="max-width: 600px; width: 100%; padding: 15px;">
    <div class="card-header text-center">
      <h4 class="card-title">Edit Branch</h4>
    </div>
    <div class="card-body">
      <%= form_with(model: branch, local: true) do |form| %>
        <% if branch.errors.any? %>
          <div id="error_explanation" class="alert alert-danger">
            <h5><%= pluralize(branch.errors.count, "error") %> prohibited this branch from being saved:</h5>
            <ul>
              <% branch.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        
        <div class="form-group">
          <%= form.label :username, class: 'form-label' %>
          <%= form.text_field :username, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :login, class: 'form-label' %>
          <%= form.text_field :login, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :password, class: 'form-label' %>
          <%= form.password_field :password, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :clinical_id, class: 'form-label' %>
          <%= form.text_field :clinical_id, class: "form-control", placeholder: " (e.g., DHA-F-0090081)" %>
        </div>

        <div class="form-group text-center">
          <div class="d-flex justify-content-between">
            <%= form.submit 'Save', class: 'btn btn-primary mr-2' %>
            <%= link_to 'Back', branches_path, class: 'btn btn-secondary' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
