<h2 class="mt-4 text-center text-primary">Settings</h2>

<div class="shadow-lg p-4 rounded bg-dark mt-3">
  <div class="list-group">
    <!-- Doctor List -->
    <%= link_to branches_path , class: "list-group-item list-group-item-action bg-dark text-white d-flex align-items-center mb-2 border-0 rounded-lg shadow-sm hover-zoom" do %>
      <i class="fas fa-code-branch mr-3 fs-4"></i>
      <span class="fs-5">Branches</span>
    <% end %>
    <!-- Doctor List -->
    <%= link_to doctorlists_path, class: "list-group-item list-group-item-action bg-dark text-white d-flex align-items-center mb-2 border-0 rounded-lg shadow-sm hover-zoom" do %>
      <i class="fas fa-user-md mr-3 fs-4"></i>
      <span class="fs-5">Doctor</span>
    <% end %>
    <!-- Manage Reception -->
    <%= link_to manage_receptions_path, class: "list-group-item list-group-item-action bg-dark text-white d-flex align-items-center mb-2 border-0 rounded-lg shadow-sm hover-zoom" do %>
      <i class="fas fa-receipt mr-3 fs-4"></i>
      <span class="fs-5">Reception</span>
    <% end %>
    <!-- Denial Codes -->
    <%= link_to denialcodelists_path, class: "list-group-item list-group-item-action bg-dark text-white d-flex align-items-center mb-2 border-0 rounded-lg shadow-sm hover-zoom" do %>
      <i class="fas fa-file-alt mr-3 fs-4"></i>
      <span class="fs-5">Denial Codes</span>
    <% end %>
  </div>
</div>
